<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/PrayerCountdown.Contents">

    <TextView
        android:id="@+id/tv_prayer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Maghrib"
        style="@style/PrayerCountdown.NextPrayer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrayerCountdown.FirstLine"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrayerCountdown.NextPrayerTime"
            tools:text="07:22" />

        <ImageView
            style="@style/PrayerCountdown.LocationIcon" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PrayerCountdown.Location"
            tools:text="Kuala Lumpur" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_value_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="09"
            style="@style/PrayerCountdown.Countdown" />

        <TextView
            android:id="@+id/tv_value_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="06"
            style="@style/PrayerCountdown.Countdown" />

        <TextView
            android:id="@+id/tv_value_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="27"
            style="@style/PrayerCountdown.Countdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="hours"
            style="@style/PrayerCountdown.CountdownLabel" />

        <TextView
            android:id="@+id/tv_label_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="minutes"
            style="@style/PrayerCountdown.CountdownLabel" />

        <TextView
            android:id="@+id/tv_label_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="seconds"
            style="@style/PrayerCountdown.CountdownLabel" />

    </LinearLayout>

</LinearLayout>
