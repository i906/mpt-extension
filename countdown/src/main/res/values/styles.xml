<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="InfoTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!-- Prayer Countdown -->

    <style name="PrayerCountdown" />

    <style name="PrayerCountdown.Contents">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PrayerCountdown.Countdown" parent="Base.TextAppearance.AppCompat.Display3">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mpt_color_accent</item>
    </style>

    <style name="PrayerCountdown.CountdownLabel" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrayerCountdown.ErrorContainer">
        <item name="android:padding">@dimen/padding_error_container</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrayerCountdown.ErrorText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrayerCountdown.FirstLine">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_first_line</item>
        <item name="android:paddingRight">@dimen/padding_first_line</item>
    </style>

    <style name="PrayerCountdown.LargeIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/mpt_grey</item>
    </style>

    <style name="PrayerCountdown.LargeIcon.Error">
        <item name="android:src">@drawable/ic_error</item>
    </style>

    <style name="PrayerCountdown.LargeIcon.Progress">
        <item name="android:src">@drawable/ic_prayer_progress</item>
    </style>

    <style name="PrayerCountdown.Location" parent="PrayerCountdown.NextPrayerTime">
        <item name="android:textColor">@color/mpt_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrayerCountdown.LocationIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:src">@drawable/ic_place</item>
        <item name="android:tint">@color/mpt_grey</item>
    </style>

    <style name="PrayerCountdown.NextPrayer" parent="Base.TextAppearance.AppCompat.Display3">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PrayerCountdown.NextPrayerTime">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_first_line</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
